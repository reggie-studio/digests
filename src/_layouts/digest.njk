---
layout: base.njk
---
<article class="digest">
  <header class="digest-header">
    <h1>{{ title }}</h1>
    <div class="digest-meta">
      <time>{{ date | readableDate }}</time>
      {% if categories %}
      <div class="digest-categories">
        {% for cat in categories %}
        <a href="/categories/#{{ cat | slug }}" class="tag">{{ cat }}</a>
        {% endfor %}
      </div>
      {% endif %}
    </div>
    {% if summary %}
    <p class="digest-summary">{{ summary }}</p>
    {% endif %}
  </header>
  
  <div class="digest-content">
    {{ content | safe }}
  </div>
  
  <footer class="digest-footer">
    <a href="/">&larr; Back to all digests</a>
  </footer>
</article>
