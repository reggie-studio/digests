---
layout: base.njk
title: Categories
---
<h1 class="text-3xl font-bold text-white mb-8">Categories</h1>

{% for category, digests in collections.categories %}
<section class="mb-10" id="{{ category | slug }}">
  <h2 class="text-2xl font-semibold text-white mb-4 pb-2 border-b border-slate-700">{{ category }}</h2>
  <div class="space-y-4">
    {% for digest in digests %}
    <article class="bg-slate-800 rounded-xl p-5 border border-slate-700 hover:border-brand transition-all hover:-translate-y-0.5">
      <div class="flex items-center gap-3 mb-2 text-sm text-slate-400">
        <time>{{ digest.data.date | shortDate }}</time>
      </div>
      <h3 class="text-lg font-semibold">
        <a href="{{ '/digests/' + digest.url | url }}" class="text-white hover:text-brand transition-colors">{{ digest.data.title }}</a>
      </h3>
      {% if digest.data.summary %}
      <p class="text-slate-400 mt-2 text-sm">{{ digest.data.summary }}</p>
      {% endif %}
    </article>
    {% endfor %}
  </div>
</section>
{% endfor %}
